{
  "id": "pgte-rpg-system",
  "title": "A Practical Guide to Evil RPG",
  "description": "A narrative RPG system based on A Practical Guide to Evil",
  "version": "1.0.6",

  "manifest": "https://adnominatio.github.io/pgte-rpg-system/system.json",
  "download": "https://github.com/adnominatio/pgte-rpg-system/archive/refs/heads/main.zip",


  "compatibility": {
    "minimum": "11",
    "verified": "12"
  },

  "templateVersion": 2,

  "styles": ["styles/pgte.css"],
  "scripts": ["scripts/pgte.js"],



"actorTypes": ["character", "npc"],
"defaultActorType": "character",


"Actor": {
  "types": ["character", "npc"],
  "templates": {
    "character": "templates/actor/character.json",
    "npc": "templates/actor/npc.json"
  }
},

"sheetClasses": {
  "actor": {
    "character": {
      "default": true,
      "template": "templates/actor-sheet.html",
      "type": "base"
    },
    "npc": {
      "template": "templates/actor-sheet.html",
      "type": "base"
    }
  }
},

  "Item": {
    "types": ["item"],
    "item": {
      "templates": ["base"],
      "description": "",
      "quantity": 1,
      "weight": 0,
      "price": 0
    }
  }
}
